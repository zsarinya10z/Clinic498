                                      <input
                                        class="field_custom"
                                        name="product_name"
                                        placeholder="Name"
                                        type="text"
                                        value="<%= product_name %>"
                                        required
                                      />
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div
                                      class="field col-lg-12 col-md-12 col-sm-12 col-xs-12"
                                    >
                                      <h4>Categories</h4>
                                      <select
                                        class="field_custom"
                                        name="categories"
                                        id="categories"
                                        required
                                      >
